DEBUG="n"
while [[ $# > 0 ]]
do
key="$1"

case $key in
    -d|--debug)
    DEBUG="y"
    shift # past argument
    ;;
    *)
            # unknown option
    ;;
esac
shift # past argument or value
done

if [ $DEBUG = "y" ]; then
echo "Starting in debug."
gradle runDebug
else
gradle install
clear
./Server/build/install/Server/bin/Server
fi
